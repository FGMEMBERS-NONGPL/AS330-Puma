	<animation>
	    <type>select</type>
	    <object-name>AnOn-NWS</object-name>
	    <condition>
		<and>
		    <property>fdm/jsbsim/gear/NWS/engaged</property>
		    <property>fdm/jsbsim/electrical/lighting/instruments</property>
		    <greater-than>
			<property>fdm/jsbsim/electrical/outputs/instrument-lights</property>
			<value>26</value>
		    </greater-than>
		</and>
	    </condition>
	</animation>
	
    <animation>
        <type>select</type>
        <object-name>Temoin-Train</object-name>
        <object-name>TemoinMTrain</object-name>
        <condition>
            <greater-than>
                <property>fdm/jsbsim/electrical/outputs/instr-ignition-switch</property>
                <value>27</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Temoin-Train</object-name>
        <condition>
            <equals>
                <property>fdm/jsbsim/systems/gear/gear-pos-norm</property>
                <value>1.0</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>TemoinMTrain</object-name>
        <condition>
            <and>
                <not-equals>
                    <property>fdm/jsbsim/systems/gear/gear-pos-norm</property>
                    <value>1.0</value>
                </not-equals>
                <not-equals>
                    <property>fdm/jsbsim/systems/gear/gear-pos-norm</property>
                    <value>0</value>
                </not-equals>
            </and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Temoin-Actif</object-name>
        <condition>
            <greater-than>
                <property>fdm/jsbsim/fcs/brake-parking-cmd-norm</property>
                <value>0.99</value>
            </greater-than>
        </condition>
    </animation>


