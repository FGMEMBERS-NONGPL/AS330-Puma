<PropertyList>

        <sim>              
                <sound>
                        <path>Aircraft/AS330-Puma/Fx/sound.xml</path>
                </sound>
		<rendering>
		    <redout>
			<red>0</red>
			<alpha>0</alpha>
			<enabled type="bool">false</enabled>
		    </redout>
	<!-- the following are recommandations in order to get the best aircraft eye candy with Shadows-->	    
		    <rembrandt>
			<ambient-oclusion type="bool">true</ambient-oclusion>
			<ambient-oclusion-buffers type="bool">true</ambient-oclusion-buffers>
			<ambient-occlusion-strength>0.1</ambient-occlusion-strength>
	<!--bloom will be active only against cockpit view : selection per view-->		
			<bloom type="bool">false</bloom>
			<bloom-strength>0.0</bloom-strength>
		    </rembrandt>
		</rendering>
       

                <instrumentation>
                    <path>Aircraft/AS330-Puma/Systems/instrumentation.xml</path>
                </instrumentation>

                <rendering>
                    <redout>
                        <red>0</red>
                        <alpha>0</alpha>
                        <enabled type="bool">false</enabled>
                    </redout>
                </rendering>
		
                <systems>
                    <electrical>
                        <path>Aircraft/AS330-Puma/Systems/dummy-electrical.xml</path>
                    </electrical>
                </systems>
		
		
		<help include="Help/AS330-help_dev.xml"/>
                <menubar  include="Inputs/AS330-Puma-menu.xml"/>
		<multiplay include="Outputs/AS330_multiplay.xml"/>       
		
        </sim>
	
	<input include="Inputs/AS330-Puma-input_dev.xml"/>

        <controls>
            <engines>
                <engine n="0">
                        <throttle>1</throttle>
			<starter alias="/fdm/jsbsim/propulsion/engine[0]/starter"/>
                </engine>
                <engine n="1">
                        <throttle>1</throttle>
			<starter alias="/fdm/jsbsim/propulsion/engine[1]/starter"/>
                </engine>
	</engines>
        <gear>
	    <brake-parking type="bool">true</brake-parking>
	    <gear-down alias="/fdm/jsbsim/systems/gear/gear-cmd-norm"/>               
        </gear>
	</controls>

        <engines>
            <engine n="0">
                <running type="bool">false</running>
            </engine>
            <engine n="1">
                <running type="bool">false</running>
            </engine>
        </engines>

        <instrumentation>
            <gsdi>
                <serviceable type="bool">true</serviceable>
                <enabled type="bool">true</enabled>
            </gsdi>
	</instrumentation>
	
	<nasal>
		<puma>                    
		    <file>Aircraft/AS330-Puma/Inputs/sys_controls.nas</file>
		</puma>                
		<render>
		    <file>Aircraft/AS330-Puma/Models/Effects/aircraft_effect.nas</file>
		</render>
		<nav>
		    <file>Aircraft/AS330-Puma/Systems/nav.nas</file>
		</nav>
		 <carrier>
		    <file>Aircraft/AS330-Puma/Systems/carrier-nv4.nas</file>
		</carrier>
	</nasal>

        <environment>
	     <params>
		<control-fdm-atmosphere type="bool">true</control-fdm-atmosphere>
	    </params>
	    <!-- locks the generic crash animation, its wants a customized crash animation-->
            <wildfire>
                <fire-on-crash type="bool" >false</fire-on-crash>
            </wildfire>
        </environment>
	
	<fdm include="Systems/jsbsim_init.xml"/>

</PropertyList>
