<PropertyList include="Puma-AS330_PilotT-Anim.xml">

	<path>Models/pilot-tV2.ac</path>
	<texture-path>Models/TexturefrAA</texture-path>

	<offsets>
            <pitch-deg>0</pitch-deg>
            <z-m>0.0</z-m>
            <x-m>0</x-m>
        </offsets>
	
	
	<animation>
            <type>select</type>
            <object-name>gabarit-pose</object-name>
            <condition>                   
			<equals>
			<property>sim/current-view/view-number</property>
                        <value>99</value>
                    </equals>		
	    </condition>
	</animation>

   
	<animation>
            <type>select</type>
            <object-name>Life-Jacket</object-name>
            <condition>                    
			<property>sim/model/FAF-Resco</property>		
	    </condition>
	</animation>	
	
	
	
	<effect>
	    <inherits-from>Aircraft/AS330-Puma/Models/Effects/reflectp-shine</inherits-from>
	    <object-name>Casque</object-name>	    
	</effect>
	
	
	
	

</PropertyList>        