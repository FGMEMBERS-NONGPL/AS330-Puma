<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>light-cons.ac</path>
  <nopreview/>

  <animation>
    <type>light</type>
    <light-type>spot</light-type>
    <name>Console-Light</name>
    <object-name>light-volume</object-name>
    <position>
        <x>0.03 </x>
      <y> 0.0 </y>
      <z> 0.10</z>
    </position>
    <direction>
      <x> 1</x>
      <y> 0</y>
      <z> -0.3 </z>
    </direction>
    <ambient>
      <r>  0.8 </r>
      <g>  0.3 </g>
      <b>  0.3 </b>
      <a>  1.0 </a>
    </ambient>
    <diffuse>
      <r>  0.5 </r>
      <g>  0.2 </g>
      <b>  0.1 </b>
      <a>  1.0 </a>
    </diffuse>
    <specular>
      <r>  0.5 </r>
      <g>  0.5 </g>
      <b>  0.5 </b>
      <a>  1.0 </a>
    </specular>
    <attenuation>
      <c>  0.10</c>
      <l>  1 </l>
      <q>  40.00 </q>
    </attenuation>
    <exponent> 8.0   </exponent>
    <cutoff>   180.0   </cutoff>
    <near-m>    0.0   </near-m>
    <far-m>    0.5 </far-m>
    <dim-factor>
	<property>fdm/jsbsim/electrical/lighting/console-norm</property>
    </dim-factor>
  </animation>

  <animation>
      <type>select</type>
      <object-name>Console-Light</object-name>
      <condition>
          <and>
              <property>sim/rendering/rembrandt/enabled</property>
          </and>
      </condition>
  </animation>



</PropertyList>
