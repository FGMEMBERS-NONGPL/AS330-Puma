	<path>puma-beacon_under.ac</path>



        <!--<offsets>
            <x-m>0</x-m>
            <y-m>-0</y-m>
            <z-m>0</z-m>
            <pitch-deg>0</pitch-deg>
        </offsets>-->





        <animation>
            <type>light</type>
            <light-type>spot</light-type>
            <name>Beacon_Light</name>
            <object-name>Beacon-volume</object-name>
            <position>
                <x>0</x>
                <y></y>
                <z>-1.35866</z>
            </position>
            <direction>
                <x> -1.0 </x>
                <y>  0.0 </y>
                <z>  0.0000 </z>
            </direction>
            <ambient>
                <r>0.0</r>
                <g>0.0</g>
                <b>0.0</b>
                <a>1.0</a>
            </ambient>
            <diffuse>
                <r>1.0</r>
                <g>0.2</g>
                <b>0.2</b>
                <a>1.0</a>
            </diffuse>
            <specular>
                <r>0.0</r>
                <g>0.0</g>
                <b>0.0</b>
                <a>1.0</a>
            </specular>
            <attenuation>
                <c>0.30</c>
                <l>0.0003</l>
                <q>0.00075</q>
            </attenuation>
            <exponent>8</exponent>
            <near-m>0.5</near-m>
            <far-m>5</far-m>
            <cutoff>90</cutoff>
        </animation>



        <animation>
            <type>rotate</type>
            <object-name>Beacon_Light</object-name>
            <property>sim/time/elapsed-sec</property>
            <factor>1000</factor> <!--waiting for jsbsim fdm ==> blinker and others animations-->
            <center>
                <x-m>0</x-m>
                <y-m>0</y-m>
                <z-m>0</z-m>
            </center>
            <axis>
                <x>0</x>
                <y>0</y>
                <z>1</z>
            </axis>
        </animation>


        <animation>
            <type>select</type>
            <object-name>Beacon_Light</object-name>
            <condition>
                <and>
                    <property>controls/lighting/beacon</property>
                    <property>sim/rendering/rembrandt</property>
                </and>
            </condition>
        </animation>

</PropertyList>