    <path>Models/puma-tail-rotor.ac</path>

	<texture-path>Models/Textures</texture-path>


	<offsets>
		<pitch-deg>0</pitch-deg>
		<!--<roll-deg>-90</roll-deg>-->
		<z-m>0.0</z-m>
	</offsets>
	
	<animation>
	   <type>select</type>
                <object-name>Gabarit-Pose</object-name>
                <condition>
                    <equals>
                        <property>sim/current-view/view-number</property>
                        <value>999</value>
                    </equals>
		</condition>
 	</animation>

        <effect>
            <inherits-from>Effects/model-transparent</inherits-from>
            <object-name>Queue-Disc_M</object-name>
        </effect>
	
	<effect>
	    <inherits-from>Aircraft/AS330-Puma/Models/Effects/reflect_rb-p-shine</inherits-from>
	    <object-name>Rotor-Queue-Axe</object-name>
	    <object-name>Rotor-Queue-Fix</object-name>
	</effect>

        <animation>
            <type>select</type>
            <object-name>Queue-Disc_M</object-name>
            <condition>
                <and>
                     <!--<property>sim/rendering/rembrandt/enabled</property>-->
                    <not-equals>
                        <property>sim/current-view/view-number</property>
                        <value>0</value>
                    </not-equals>
                    <greater-than>
                        <property>sim/multiplay/generic/float[4]</property>
                        <value>600</value>
                    </greater-than>
                </and>
            </condition>
        </animation>

        <animation>
            <type>select</type>
            <object-name>Rotor-Queue-Pales</object-name>
            <condition>
                <not>
                    <equals>
                        <property>sim/current-view/view-number</property>
                        <value>0</value>
                    </equals>
                </not>
            </condition>
        </animation>




        <animation>
            <type>blend</type>
            <object-name>Rotor-Queue-Pales</object-name>
            <!--<object-name>Rotor-Queue-Cde</object-name>-->
            <!--<property>sim/multiplay/generic/float[4]</property>-->
            <property>sim/multiplay/generic/float[5]</property>
            <!--<offset>-0.2</offset>
            <factor>0.0009</factor>
            <min>0.10</min>-->
            <offset>0.0</offset>
            <factor>0.0040</factor>
        </animation>





        <animation>
            <type>spin</type>
            <object-name>Rotor-Queue-Pales</object-name>
            <object-name>Rotor-Queue-Cde</object-name>
            <object-name>Rotor-Queue-Axe</object-name>
            <object-name>Rotor-Queue-Fix</object-name>
            <property>sim/multiplay/generic/float[4]</property>
            <center>
                <x-m>0</x-m>
                <y-m>0</y-m>
                <z-m>0</z-m>
            </center>
            <axis>
                <x>0</x>
                <y>0</y>
                <z>1</z>
            </axis>
        </animation>



        <animation>
            <type>blend</type>
            <object-name>Queue-Disc_M</object-name>
            <property>sim/multiplay/generic/float[4]</property>
            <offset>1.2</offset>
            <factor>-0.0005</factor>
            <max>0.15</max>
        </animation>



        <animation>
            <type>spin</type>
            <object-name>Queue-Disc_M</object-name>
            <property>sim/multiplay/generic/float[4]</property>
            <center>
                <x-m>0</x-m>
                <y-m>0</y-m>
                <z-m>0</z-m>
            </center>
            <axis>
                <x>0</x>
                <y>0</y>
                <z>1</z>
            </axis>
        </animation>







</PropertyList>