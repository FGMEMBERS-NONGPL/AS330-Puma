    <path>puma-cabineV3.ac</path>

	<texture-path>Texturefr</texture-path>


	<offsets>
		<pitch-deg>0</pitch-deg>
		<z-m>0.0</z-m>
	</offsets>


        <animation>
            <type>shader</type>
            <shader>chrome</shader>
            <texture>Aircraft/AS330-Puma/Models/Texturefr/shader.png</texture>
            <object-name>Hublot-Inf</object-name>
        </animation>


	<animation>
            <type>select</type>
            <object-name>third-seat</object-name>
            <condition>
                    <property>sim/model/third-seat-selected</property>
            </condition>
        </animation>
	
	 <animation>
            <type>pick</type>
            <object-name>third-seat-back</object-name>
            <action>
                <button>0</button>
                <binding>
                    <command>property-toggle</command>
		    <property>fdm/jsbsim/animation/third-seat-deployed</property>
                </binding>
            </action>
        </animation>
	
	<animation>
	    <type>rotate</type>
            <object-name>third-seat-seat</object-name>
	    <object-name>third-seat-back</object-name>
	    <property>fdm/jsbsim/animation/third-seat-pos-norm</property>
	    <!--<factor>90</factor>-->
	    <interpolation>
                <entry>
                    <ind>0</ind>
                    <dep>0</dep>
                </entry>
		<entry>
                    <ind>0.5</ind>
                    <dep>0</dep>
                </entry>
                <entry>
                    <ind>1</ind>
                    <dep>90</dep>
                </entry>
            </interpolation>
            <center>
                <x-m>0</x-m>
                <y-m>-0.235706</y-m>
                <z-m>-0.497657</z-m>
            </center>
            <axis>
                <x>1</x>
                <y>0</y>
                <z>0</z>
            </axis>
        </animation>
	
	<animation>
	    <type>rotate</type>
            <object-name>third-seat-back</object-name>
	    <property>fdm/jsbsim/animation/third-seat-pos-norm</property>
	    <!--<factor>-90</factor>-->
	     <interpolation>
                <entry>
                    <ind>0</ind>
                    <dep>0</dep>
                </entry>
		<entry>
                    <ind>0.5</ind>
                    <dep>-90</dep>
                </entry>
                <entry>
                    <ind>1</ind>
                    <dep>-90</dep>
                </entry>
            </interpolation>
            <center>
                <x-m>-2.44921</x-m>
                <y-m>0</y-m>
                <z-m>-0.460109</z-m>
            </center>
            <axis>
                <x>0</x>
                <y>1</y>
                <z>0</z>
            </axis>
        </animation>
	
	


        <animation>
            <type>select</type>
            <object-name>Seat-center</object-name>
            <condition>
                    <property>sim/model/center-seat-selected</property>
            </condition>
        </animation>

        <animation>
            <type>select</type>
            <object-name>Cabin-Right-RearSeat</object-name>
            <condition>
                <not>
                <property>sim/model/FAF-Resco</property>
                </not>
            </condition>
        </animation>



        <animation>
            <condition>
                <and>
                    <not>
                        <property>sim/model/FAF-Resco</property>
                    </not>
                    <not>
                        <property>sim/model/center-seat-selected</property>
                    </not>
                </and>
            </condition>
            <type>rotate</type>
            <object-name>Plancher-DTrappe-Sup</object-name>
            <object-name>Plancher-DTrappe-Inf</object-name>
            <property>fdm/jsbsim/animation/floor-cabin_door-pos-norm</property>
            <factor>180</factor>
            <center>
                <x-m>0</x-m>
                <y-m>0.334574</y-m>
                <z-m>-0.902269</z-m>
            </center>
            <axis>
                <x>-1</x>
                <y>0</y>
                <z>0</z>
            </axis>
        </animation>

        <animation>
            <condition>
                <and>
                    <not>
                        <property>sim/model/FAF-Resco</property>
                    </not>
                    <not>
                        <property>sim/model/center-seat-selected</property>
                    </not>
                </and>
            </condition>
            <type>rotate</type>
            <object-name>Plancher-GTrappe-Sup</object-name>
            <object-name>Plancher-GTrappe-Inf</object-name>
            <property>fdm/jsbsim/animation/floor-cabin_door-pos-norm</property>
            <factor>180</factor>
            <center>
                <x-m>0</x-m>
                <y-m>-0.334574</y-m>
                <z-m>-0.902269</z-m>
            </center>
            <axis>
                <x>1</x>
                <y>0</y>
                <z>0</z>
            </axis>
        </animation>


        <animation>
            <type>pick</type>
            <object-name>Plancher-GTrappe-Sup</object-name>
            <object-name>Plancher-DTrappe-Sup</object-name>
            <action>
                <button>0</button>
                <binding>
                    <command>property-toggle</command>
                    <property>fdm/jsbsim/animation/floor-cabin_door-pos-cmd</property>
                </binding>
            </action>
        </animation>

















</PropertyList>