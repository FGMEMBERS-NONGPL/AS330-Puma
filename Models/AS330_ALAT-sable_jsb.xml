        <model>
            <name>Force-Op</name>
            <path>Aircraft/AS330-Puma/Models/Crew/Force-Op.xml</path>
            <offsets>
                <x-m>-0.55</x-m>
                <y-m>0</y-m>
                <z-m>-5.2</z-m>
                <pitch-deg>0</pitch-deg>
            </offsets>
        </model>


        <animation>
            <type>select</type>
            <object-name>Force-Op</object-name>
            <condition>
                <equals>
                    <property>fdm/jsbsim/animation/floor-cabin_door-pos-norm</property>
                    <value>1</value>
                </equals>
            </condition>
        </animation>


        <animation>
            <type>rotate</type>
            <object-name>Cockpit-LeftDoor-Frame-Ext</object-name>
            <object-name>Cockpit-LeftDoor-Frame-Int</object-name>
            <object-name>Left-Pilot_Door_Window1</object-name>
            <object-name>Left-Pilot_Door_Window1-Frame</object-name>
            <object-name>Left-Pilot_Door_Window2</object-name>
            <object-name>Left-Pilot_Door_Window3</object-name>
            <property>fdm/jsbsim/animation/cockpit-left-door-pos-norm</property>
            <interpolation>
                <entry>
                    <ind>0.0</ind>
                    <dep>0.0</dep>
                </entry>
                <entry>
                    <ind>0.25</ind>
                    <dep>0</dep>
                </entry>
                <entry>
                    <ind>0.75</ind>
                    <dep>150</dep>
                </entry>
                <entry>
                    <ind>1.0</ind>
                    <dep>150</dep>
                </entry>
            </interpolation>
            <axis>
                <x1-m>-3.9039</x1-m>
                <y1-m>-0.846428</y1-m>
                <z1-m>-0.0509801</z1-m>
                <x2-m>-3.9039</x2-m>
                <y2-m>-0.89914</y2-m>
                <z2-m>-0.667607</z2-m>
            </axis>
        </animation>

        <animation>
            <type>rotate</type>
            <object-name>Left-Pilot_Door_Window1</object-name>
            <object-name>Left-Pilot_Door_Window1-Frame</object-name>
	    <property>fdm/jsbsim/animation/cockpit-left-door_wd-pos-norm</property>
            <factor>6</factor>
            <center>
                <x-m>-2.95509</x-m>
                <y-m>2.57687</y-m>
                <z-m></z-m>
            </center>
            <axis>
                <x>0</x>
                <y>0</y>
                <z>1</z>
            </axis>
        </animation>


        <animation>
            <type>pick</type>
            <object-name>Left-Pilot_Door_Window1-Frame</object-name>
            <action>
                <button>0</button>
                <repeatable type="bool">true</repeatable>
                <binding>
                    <command>property-adjust</command>
		    <property>fdm/jsbsim/animation/cockpit-left-door_wd-pos-cmd</property>                    
                    <step>0.25</step>
                    <min>0</min>
                    <max>1</max>
                </binding>
            </action>
            <action>
                <button>1</button>
                <repeatable type="bool">true</repeatable>
                <binding>
                    <command>property-adjust</command>
                    <property>fdm/jsbsim/animation/cockpit-left-door_wd-pos-cmd</property>                    
                    <step>-0.25</step>
                    <min>0</min>
                    <max>1</max>
                </binding>
            </action>
        </animation>

        <animation>
            <type>shader</type>
            <shader>chrome</shader>
            <texture>Aircraft/AS330-Puma/Models/Texturefr/shader.png</texture>
            <object-name>Left-Pilot_Door_Window1</object-name>
            <object-name>Left-Pilot_Door_Window2</object-name>
            <object-name>Left-Pilot_Door_Window3</object-name>
        </animation>



        <animation>
            <type>rotate</type>
            <object-name>Cockpit-RightDoor-Frame-Ext</object-name>
            <object-name>Cockpit-RightDoor-Frame-Int</object-name>
            <object-name>Right-Pilot_Door_Window1</object-name>
            <object-name>Right-Pilot_Door_Window1-Frame</object-name>
            <object-name>Right-Pilot_Door_Window2</object-name>
            <object-name>Right-Pilot_Door_Window3</object-name>
            <property>fdm/jsbsim/animation/cockpit-right-door-pos-norm</property>
            <!--<factor>-150</factor>-->
            <interpolation>
                <entry>
                    <ind>0.0</ind>
                    <dep>0.0</dep>
                </entry>
                <entry>
                    <ind>0.25</ind>
                    <dep>0</dep>
                </entry>
                <entry>
                    <ind>0.75</ind>
                    <dep>0</dep>
                </entry>
                <entry>
                    <ind>1.0</ind>
                    <dep>-150</dep>
                </entry>
            </interpolation>
            <axis>
                <x1-m>-3.9039</x1-m>
                <y1-m>0.846428</y1-m>
                <z1-m>-0.0509801</z1-m>
                <x2-m>-3.9039</x2-m>
                <y2-m>0.89914</y2-m>
                <z2-m>-0.667607</z2-m>
            </axis>
        </animation>

        <animation>
            <type>rotate</type>
            <object-name>Right-Pilot_Door_Window1</object-name>
            <object-name>Right-Pilot_Door_Window1-Frame</object-name>
            <property>fdm/jsbsim/animation/cockpit-right-door_wd-pos-norm</property>
            <factor>-6</factor>
            <center>
                <x-m>-2.95509</x-m>
                <y-m>-2.57687</y-m>
                <z-m></z-m>
            </center>
            <axis>
                <x>0</x>
                <y>0</y>
                <z>1</z>
            </axis>
        </animation>


        <animation>
            <type>pick</type>
            <object-name>Right-Pilot_Door_Window1-Frame</object-name>
            <action>
                <button>0</button>
                <repeatable type="bool">true</repeatable>
                <binding>
                    <command>property-adjust</command>
                     <property>fdm/jsbsim/animation/cockpit-right-door_wd-pos-cmd</property>                    
                    <step>0.25</step>
                    <min>0</min>
                    <max>1</max>
                </binding>
            </action>
            <action>
                <button>1</button>
                <repeatable type="bool">true</repeatable>
                <binding>
                    <command>property-adjust</command>
                    <property>fdm/jsbsim/animation/cockpit-right-door_wd-pos-cmd</property>                    
                    <step>-0.25</step>
                    <min>0</min>
                    <max>1</max>
                </binding>
            </action>
        </animation>


        <animation>
            <type>shader</type>
            <shader>chrome</shader>
            <texture>Aircraft/AS330-Puma/Models/Texturefr/shader.png</texture>
            <object-name>Right-Pilot_Door_Window1</object-name>
            <object-name>Right-Pilot_Door_Window2</object-name>
            <object-name>Right-Pilot_Door_Window3</object-name>
        </animation>


        <animation>
            <type>translate</type>
            <object-name>GPorte-Ext</object-name>
            <object-name>GPorte-Dbl</object-name>
            <object-name>GPorte-Poignee</object-name>
            <object-name>GPorte-Hublots-Struct</object-name>
            <object-name>GPorte-Hublots</object-name>
            <object-name>GPorte-Stripe</object-name>
            <property>fdm/jsbsim/animation/left-cabin_door-pos-norm</property>
            <interpolation>
                <entry>
                    <ind>0.0</ind>
                    <dep>0.0</dep>
                </entry>
                <entry>
                    <ind>0.05</ind>
                    <dep>0.0</dep>
                </entry>
                <entry>
                    <ind>1.0</ind>
                    <dep>-1.45</dep>
                </entry>
            </interpolation>
            <axis>
                <x>1</x>
                <y>0</y>
                <z>0</z>
            </axis>
        </animation>

        <animation>
            <type>translate</type>
            <object-name>GPorte-Ext</object-name>
            <object-name>GPorte-Dbl</object-name>
            <object-name>GPorte-Poignee</object-name>
            <object-name>GPorte-Hublots-Struct</object-name>
            <object-name>GPorte-Hublots</object-name>
            <object-name>GPorte-Stripe</object-name>
            <property>/fdm/jsbsim/animation/left-cabin_door-pos-norm</property>

            <interpolation>
                <entry>
                    <ind>0.0</ind>
                    <dep>0.0</dep>
                </entry>
                <entry>
                    <ind>0.40</ind>
                    <dep>0.05</dep>
                </entry>
                <entry>
                    <ind>1.0</ind>
                    <dep>0.05</dep>
                </entry>
            </interpolation>
            <axis>
                <x>0</x>
                <y>-1</y>
                <z>0</z>
            </axis>
        </animation>

        <animation>
            <type>shader</type>
            <shader>chrome</shader>
            <texture>Aircraft/AS330-Puma/Models/Texturefr/shader.png</texture>
            <object-name>GPorte-Hublots</object-name>
        </animation>


        <animation>
            <type>translate</type>
            <object-name>DPorte-Ext</object-name>
            <object-name>DPorte-Dbl</object-name>
            <object-name>DPorte-Poignee</object-name>
            <object-name>DPorte-Hublots-Struct</object-name>
            <object-name>DPorte-Hublots</object-name>
            <object-name>DPorte-Stripe</object-name>
            <property>fdm/jsbsim/animation/right-cabin_door-pos-norm</property>
            <interpolation>
                <entry>
                    <ind>0.0</ind>
                    <dep>0.0</dep>
                </entry>
                <entry>
                    <ind>0.05</ind>
                    <dep>0.0</dep>
                </entry>
                <entry>
                    <ind>1.0</ind>
                    <dep>-1.45</dep>
                </entry>
            </interpolation>
            <axis>
                <x>1</x>
                <y>0</y>
                <z>0</z>
            </axis>
        </animation>

        <animation>
            <type>translate</type>
            <object-name>DPorte-Ext</object-name>
            <object-name>DPorte-Dbl</object-name>
            <object-name>DPorte-Poignee</object-name>
            <object-name>DPorte-Hublots-Struct</object-name>
            <object-name>DPorte-Hublots</object-name>
            <object-name>DPorte-Stripe</object-name>
            <property>fdm/jsbsim/animation/right-cabin_door-pos-norm</property>
            <interpolation>
                <entry>
                    <ind>0.0</ind>
                    <dep>0.0</dep>
                </entry>
                <entry>
                    <ind>0.40</ind>
                    <dep>0.05</dep>
                </entry>
                <entry>
                    <ind>1.0</ind>
                    <dep>0.05</dep>
                </entry>
            </interpolation>
            <axis>
                <x>0</x>
                <y>1</y>
                <z>0</z>
            </axis>
        </animation>


        <animation>
            <type>shader</type>
            <shader>chrome</shader>
            <texture>Aircraft/AS330-Puma/Models/Texturefr/shader.png</texture>
            <object-name>DPorte-Hublots</object-name>
        </animation>



        <animation>
            <type>select</type>
            <object-name>Fuselage-Trappe</object-name>
            <condition>
                <property>sim/model/center-seat-selected</property>
            </condition>
        </animation>


</PropertyList>