	<animation>
            <type>shader</type>
            <shader>chrome</shader>
            <texture>Aircraft/AS330-Puma/Models/Texturefr/shader.png</texture>
            <object-name>Cockpit-Vitrage</object-name>
        </animation>

        <animation>
            <type>shader</type>
            <shader>chrome</shader>
            <texture>Aircraft/AS330-Puma/Models/Texturefr/shader.png</texture>
            <object-name>Hublots-F</object-name>
        </animation>

        <animation>
            <type>noshadow</type>
            <object-name>Door-Rail</object-name>
        </animation>




        <animation>
            <type>select</type>
            <object-name>Flash-eff_rb</object-name>
            <condition>
                <and>
                    <property>fdm/jsbsim/electrical/landing-light</property>
                    <greater-than>
                        <property>sim/time/sun-angle-rad</property>
                        <value>1.40</value>
                    </greater-than>
                    <property>sim/rendering/rembrandt/enabled</property>
                </and>
            </condition>
        </animation>

        <animation>
            <type>select</type>
            <object-name>Flash-eff</object-name>
            <condition>
                <and>
                    <property>fdm/jsbsim/electrical/landing-light</property>
                    <greater-than>
                        <property>sim/time/sun-angle-rad</property>
                        <value>1.40</value>
                    </greater-than>
                    <not>
                        <property>sim/rendering/rembrandt/enabled</property>
                    </not>
                </and>
            </condition>
        </animation>


        <animation>
            <type>select</type>
            <object-name>Puma-Rbdt_Lights</object-name>
            <condition>
                <property>sim/rendering/rembrandt/enabled</property>
            </condition>
        </animation>

        <animation>
            <type>select</type>
            <object-name>Puma-Rbdt_Beacon</object-name>
            <condition>
                <property>sim/rendering/rembrandt/enabled</property>
            </condition>
        </animation>

        <animation>
            <type>select</type>
            <object-name>Puma-Rbdt_Green-side</object-name>
            <condition>
                <property>sim/rendering/rembrandt/enabled</property>
            </condition>
        </animation>


        <animation>
            <type>select</type>
            <object-name>DFVert</object-name>
            <condition>
                <not>
                    <property>sim/rendering/rembrandt/enabled</property>
                </not>
            </condition>
        </animation>

        <animation>
            <type>select</type>
            <object-name>Puma-Rbdt_Red-side</object-name>
            <condition>
                <property>sim/rendering/rembrandt/enabled</property>
            </condition>
        </animation>

        <animation>
            <type>select</type>
            <object-name>GFRouge</object-name>
            <condition>
                <not>
                    <property>sim/rendering/rembrandt/enabled</property>
                </not>
            </condition>
        </animation>

        <animation>
            <type>select</type>
            <object-name>Puma-Rbdt_White-top</object-name>
            <condition>
                <property>sim/rendering/rembrandt/enabled</property>
            </condition>
        </animation>


        <animation>
            <type>select</type>
            <object-name>TFBlanc</object-name>
            <condition>
                <not>
                    <property>sim/rendering/rembrandt/enabled</property>
                </not>
            </condition>
        </animation>




