<PropertyList>

 <path>Models/clock.ac</path>
 <texture-path>Models/Textures</texture-path>

	<animation>
		<type>noshadow</type>
		<object-name>Clock</object-name>
	</animation>



        <animation>
            <type>pick</type>
            <object-name>Bouton</object-name>
            <action>
                <repeatable type="bool">true</repeatable>
                <button>0</button>
                <binding>
                    <command>property-adjust</command>
                    <property>/instrumentation/clock/offset-sec</property>
                    <step>60</step>
                    <min>0</min>
                    <max>43200</max>
                    <wrap>1</wrap>
                </binding>
            </action>
        </animation>

	<animation include="Instrument-Light4.xml">
		<object-name>SecondHand</object-name>
		<object-name>MinuteHand</object-name>
		<object-name>HourHand</object-name>
	</animation>

	<animation include="Instrument-Light3.xml">
		<object-name>Cadran</object-name>
	</animation>
	
	<effect>
	    <inherits-from>Aircraft/AS330-Puma/Models/Effects/reflectp-shine</inherits-from>
	    <object-name>Cadran</object-name>	    
	</effect>

	<animation>
		<type>rotate</type>
		<object-name>SecondHand</object-name>
		<property>instrumentation/clock/indicated-sec</property>
		<factor>6</factor>
			<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>MinuteHand</object-name>
		<property>instrumentation/clock/indicated-min</property>
		<factor>6</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
			</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>HourHand</object-name>
		<property>instrumentation/clock/indicated-sec</property>
                <factor>0.008333333333333333333</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

</PropertyList>


