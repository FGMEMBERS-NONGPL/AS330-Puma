	</animation>-->

        <!--<animation include="Instrument-Light1b.xml">
            <object-name>Temoin-Marquage</object-name>
        </animation>-->
	
	
	<model>
            <name>Light-Bezel_tpt-S51</name>
            <path>Aircraft/AS330-Puma/Instruments/Light-Bezel_tpt-S51.xml</path>
            <offsets>
                <x-m>-0.05</x-m>
                <y-m>0</y-m>
                <z-m>0</z-m>
                <pitch-deg>0</pitch-deg>
            </offsets>
        </model>

        <animation>
            <type>select</type>
            <object-name>Light-Bezel_tpt-S51</object-name>
            <condition>
                    <property>sim/rendering/rembrandt/enabled</property>
            </condition>
        </animation>
	
	<effect>
            <inherits-from>Effects/model-transparent</inherits-from>
            <object-name>Bulle-Cyl</object-name>
        </effect>


	<animation>
		<type>rotate</type>
		<object-name>Bille</object-name>
		<property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
		<interpolation>
			<entry>
				<ind>-1.1</ind>
				<dep>-6.3019</dep>
			</entry>
			<entry>
				<ind>1.1</ind>
				<dep>6.3019</dep>
			</entry>
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.258393</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

        

</PropertyList>
