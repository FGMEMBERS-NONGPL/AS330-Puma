<!-- poussière  tu n'es que poussière, tu retournera poussière-->
<PropertyList>
        <model>
            <name>Rotor-Poussiere1</name>
            <path>Aircraft/AS330-Puma/Effets/Poussiere.xml</path>
            <offsets>
                <x-m>-0.600235</x-m>
                <y-m>7</y-m>
                <z-m>0</z-m>
                <pitch-deg>0</pitch-deg>
                <heading-deg>180</heading-deg>
            </offsets>
        </model>

        <model>
            <name>Rotor-Poussiere2</name>
            <path>Aircraft/AS330-Puma/Effets/Poussiere.xml</path>
            <offsets>
                <x-m>-0.600235</x-m>
                <y-m>-7</y-m>
                <z-m>0</z-m>
                <pitch-deg>0</pitch-deg>
                <heading-deg>0</heading-deg>
            </offsets>
        </model>

        <model>
            <name>Rotor-Poussiere3</name>
            <path>Aircraft/AS330-Puma/Effets/Poussiere.xml</path>
            <offsets>
                <x-m>-7.600235</x-m>
                <y-m>0</y-m>
                <z-m>0</z-m>
                <pitch-deg>0</pitch-deg>
                <heading-deg>90</heading-deg>
            </offsets>
        </model>

        <model>
            <name>Rotor-Poussiere4</name>
            <path>Aircraft/AS330-Puma/Effets/Poussiere.xml</path>
            <offsets>
                <x-m>6.4</x-m>
                <y-m>0</y-m>
                <z-m>0</z-m>
                <pitch-deg>0</pitch-deg>
                <heading-deg>270</heading-deg>
            </offsets>
        </model>

        <animation>
            <type>select</type>
            <object-name>Rotor-Poussiere1</object-name>
            <object-name>Rotor-Poussiere2</object-name>
            <object-name>Rotor-Poussiere3</object-name>
            <object-name>Rotor-Poussiere4</object-name>
            <condition>
                <and>
                <property>sim/rendering/particles</property>
                <property>environment/terrain-solid</property>
                <!--<not>
                    <property>sim/crashed</property>
                </not>-->
                <less-than>
                    <property>position/altitude-agl-ft</property>
                    <value>70</value>
                </less-than>
                <greater-than>
                    <property>rotors/main/rpm</property>
                    <value>100</value>
                </greater-than>
                <not-equals>
                    <property>sim/current-view/view-number</property>
                    <value>0</value>
                </not-equals>
                </and>
            </condition>
        </animation>

        <animation>
            <type>rotate</type>
            <object-name>Rotor-Poussiere1</object-name>
            <object-name>Rotor-Poussiere2</object-name>
            <object-name>Rotor-Poussiere3</object-name>
            <object-name>Rotor-Poussiere4</object-name>
            <property>orientation/pitch-deg</property>
            <axis>
                <x>0</x>
                <y>-1</y>
                <z>0</z>
            </axis>
        </animation>

        <animation>
            <type>rotate</type>
            <object-name>Rotor-Poussiere1</object-name>
            <object-name>Rotor-Poussiere2</object-name>
            <object-name>Rotor-Poussiere3</object-name>
            <object-name>Rotor-Poussiere4</object-name>
            <property>orientation/roll-deg</property>
            <axis>
                <x>1</x>
                <y>0</y>
                <z>0</z>
            </axis>
        </animation>

        <animation>
            <type>translate</type>
            <object-name>Rotor-Poussiere1</object-name>
            <object-name>Rotor-Poussiere2</object-name>
            <object-name>Rotor-Poussiere3</object-name>
            <object-name>Rotor-Poussiere4</object-name>
            <property>position/gear-agl-m</property>
             <factor>0.4</factor>
            <axis>
                <x>0</x>
                <y>0</y>
                <z>-1</z>
            </axis>
        </animation>

        <animation>
            <type>scale</type>
            <object-name>Rotor-Poussiere1</object-name>
            <object-name>Rotor-Poussiere2</object-name>
            <object-name>Rotor-Poussiere3</object-name>
            <object-name>Rotor-Poussiere4</object-name>
            <property>position/gear-agl-m</property>
            <x-min>1</x-min>
            <y-min>1</y-min>
            <z-min>0.5</z-min>
            <z-max>0.5</z-max>
            <x-factor>-0.3</x-factor>
            <y-factor>-0.3</y-factor>

        </animation>

        <animation>
            <type>spin</type>
            <object-name>Rotor-Poussiere1</object-name>
            <object-name>Rotor-Poussiere2</object-name>
            <object-name>Rotor-Poussiere3</object-name>
            <object-name>Rotor-Poussiere4</object-name>
            <property>rotors/main/rpm</property>
            <factor>-1.5</factor>
            <center>
                <x-m>-0.600235</x-m>
                <y-m>0</y-m>
                <z-m>0</z-m>
            </center>
            <axis>
                <x>0</x>
                <y>0</y>
                <z>1</z>
            </axis>
        </animation>
</PropertyList>