<?xml version="1.0"?>

<PropertyList>
	<name>control</name>
	<dialog-name>aircraft-control</dialog-name>
	<x>-10</x>
	<y>-30</y>
	<layout>vbox</layout>
	    <group>
		    <layout>hbox</layout>
		    <default-padding>1</default-padding>
		    <empty>
		    <stretch>true</stretch>
		    </empty>
		    <text>
			<label>Main</label>
			<halign>center</halign>
		    </text>
		    <empty>
		    <stretch>true</stretch>
		    </empty>
		    <button>
		    <legend/>
		    <key>Esc</key>
		    <pref-width>16</pref-width>
		    <pref-height>16</pref-height>
		    <border>2</border>
		    <command>dialog-apply</command>
		    <binding>
			<command>dialog-close</command>
		    </binding>
		    </button>
		    </group>
		    <hrule/> 
		<group>
	    <layout>vbox</layout>
	    <text>
		<label>AIRCRAFT CONTROL</label>
		<halign>center</halign>
	    </text>
	    <text>
		<label>======OOOO=======</label>
		<halign>center</halign>
	    </text>
	    </group>
	    <hrule/>
	    <group>
		 <layout>hbox</layout>
		<text>
		    <label>>>>START UP CMD>>></label>
		    <halign>center</halign>
		</text>
	    </group>
	     <hrule/>
	    <group>
                <layout>hbox</layout>
		<button>
		     <legend>ROTOR BRAKE</legend>
		    <halign>left</halign>
		     <binding>
                        <command>property-toggle</command>
			<property>fdm/jsbsim/animation/rotor_brake-switch-cmd</property>
		    </binding>
		     <binding>
			<command>property-toggle</command>
			<property>fdm/jsbsim/animation/rotor_brake-switch-lock-cmd</property>
		    </binding>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/fcs/wing-fold-cmd</property>
			<value>0</value>
		    </binding>
		 </button>   
		<checkbox>
		    <property>fdm/jsbsim/animation/rotor_brake-switch-cmd</property>
		    <command>dialog-apply</command>
		    <live>true</live>
		    <halign>right</halign>
                </checkbox>
	    </group>
	    <hrule/>
	     
	    <group>
		<layout>hbox</layout>
		<button>
		     <legend>BATTERY</legend>
		    <live>true</live>
		    <halign>left</halign>
		    <binding>
			<command>property-toggle</command>
			<property>fdm/jsbsim/electrical/switch/battery</property>
		    </binding>
                </button>
		 <checkbox>
		      <halign>right</halign>
			<property>fdm/jsbsim/electrical/switch/battery</property>
			<command>dialog-apply</command>
			<live>true</live>
		 </checkbox>	
	    </group>
	    
	    <group>
		<layout>hbox</layout>
		<button>
		     <legend>ALTERNATOR</legend>
		    <live>true</live>
		    <halign>left</halign>
		    <binding>
			<command>property-toggle</command>
			<property>fdm/jsbsim/electrical/switch/alternator</property>
		    </binding>
                </button>
		 <checkbox>
		     <halign>right</halign>
			<property>fdm/jsbsim/electrical/switch/alternator</property>
			<command>dialog-apply</command>
			<live>true</live>
		 </checkbox>	
	    </group>
	    <group>
		<layout>hbox</layout>
		<button>
		     <legend>MASTER</legend>
		    <live>true</live>
		     <halign>left</halign>
		    <enable>
			<and>
			<property>fdm/jsbsim/electrical/switch/battery</property>
			<property>fdm/jsbsim/electrical/switch/alternator</property>	   
			</and>
		    </enable>
		    <binding>
			<command>property-toggle</command>
			<property>fdm/jsbsim/animation/electrical-master-switch</property>			
		    </binding>
		     <binding>
			<command>property-toggle</command>
			<property>fdm/jsbsim/animation/master-switch-lock-cmd</property>		
		    </binding>
                </button>
		 <checkbox>
		     <halign>right</halign>
			<property>fdm/jsbsim/animation/electrical-master-switch</property>
			<command>dialog-apply</command>
			<live>true</live>
		 </checkbox>	
		</group>
		<group>
		<layout>vbox</layout>
		<text>
		    <label>BOTH ENGINES</label>
		     <halign>center</halign>
		</text>
		<text>
		    <label>PUMP and CUTOFF</label>
		     <halign>center</halign>
		</text>
	    </group>
	    <group>
		<layout>hbox</layout>
		<button>
		     <legend>OPEN</legend>
		     <halign>left</halign>
		    <live>true</live>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/systems/engine/left-engine</property>
			<value>1</value>
		    </binding>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/systems/engine/right-engine</property>
			<value>1</value>
		    </binding>
		     <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/systems/engine/left-cutoff</property>
			<value>0</value>
		    </binding>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/systems/engine/right-cutoff</property>
			<value>0</value>
		    </binding>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/propulsion/engine[0]/cutoff</property>
			<value>0</value>
		    </binding>
                </button>
		<button>
		     <legend>CUT</legend>
		    <live>true</live>
		    <binding>
			<command>property-assign</command>	<property>fdm/jsbsim/propulsion/engine[0]/cutoff</property>
			<value>1</value>
		    </binding>
		     <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/systems/engine/left-engine</property>
			<value>0</value>
		    </binding>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/systems/engine/right-engine</property>
			<value>0</value>
		    </binding>
		     <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/systems/engine/left-cutoff</property>
			<value>1</value>
		    </binding>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/systems/engine/right-cutoff</property>
			<value>1</value>
		    </binding>
                </button>
		<checkbox>
		    <halign>right</halign>
			<property>fdm/jsbsim/systems/engine/fuel-pump</property>	
			<live>true</live>
		 </checkbox>
	    </group>
	   <hrule/>
		<group>
		<layout>hbox</layout>
		<button>
		     <legend>START</legend>
		    <live>true</live>
		     <halign>left</halign>
		    <enable>
			<and>
			    <not>
				<property>fdm/jsbsim/propulsion/engine[0]/cutoff</property>
			    </not>
			    <not>
				 <property>fdm/jsbsim/animation/rotor_brake-switch-cmd</property>
			    </not>
			    <property>fdm/jsbsim/animation/electrical-master-switch</property>
			</and>
		    </enable>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/systems/engine/left-starter</property>
			<value>1</value>
		    </binding>
		     <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/systems/engine/right-starter</property>
			<value>1</value>
		    </binding>
                </button>
		<button>
		     <legend>STOP/INIT</legend>
		     <halign>right</halign>
		      <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/propulsion/engine[0]/cutoff</property>
			<value>1</value>
		    </binding>
		     <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/electrical/switch/alternator</property>
			<value>0</value>
		    </binding>
		     <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/electrical/switch/battery</property>
			<value>0</value>
		    </binding>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/animation/electrical-master-switch</property>
			<value>0</value>
		    </binding>
		     <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/animation/master-switch-lock-cmd</property>
			<value>0</value>
		    </binding>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/fcs/nominal-flow-cmd</property>
			<value>0</value>
		    </binding>
                </button>
		</group>
		<hrule/>
		<group>
		    <layout>hbox</layout>
		    <halign>left</halign>
		    <text>
			<label>Turbine n1 %</label>
		    </text>
		    <input>
		    <live>true</live>
		    <halign>right</halign>
		    <property>fdm/jsbsim/propulsion/engine[0]/n1</property>
		    <x>10</x>
		    <y>10</y>
		    <color>
			<red>1.0</red>
			<green>0.80</green>
			<blue>0.80</blue>
		    </color>
		    </input>
		</group>
		<!--<group>
                <layout>hbox</layout>
		<button>
		     <legend>CLUTCH</legend>
		     <live>true</live>
		    <halign>left</halign>
		     <enable>
			<and>
			    <greater-than>
				<property>fdm/jsbsim/propulsion/engine[0]/n1</property>
				<value>60</value>
			    </greater-than>
			</and>
		    </enable>
		     <binding>
                        <command>property-toggle</command>
			<property>fdm/jsbsim/systems/rotor/clutch-cmd-norm</property>
		    </binding>
		 </button>   
		<checkbox>
		    <property>fdm/jsbsim/systems/rotor/clutch-cmd-norm</property>
		    <command>dialog-apply</command>
		    <live>true</live>
		    <halign>right</halign>
                </checkbox>
	    </group>-->
		
	    <hrule/>
	    
	    <group>
		<layout>table</layout>
		    <text>
			<label>Brake-Parking Engage</label>
			<halign>left</halign>
			<row>1</row>
			<col>0</col>
		    </text>
		    <checkbox>
			<row>1</row>
			<col>1</col>
			<property>fdm/jsbsim/fcs/brake-parking-cmd-norm</property>
			<command>dialog-apply</command>
			<live>true</live>
			<binding>
			    <command>property-toggle</command>
			    <property>fdm/jsbsim/fcs/brake-parking-cmd-norm</property>
			</binding>
		    </checkbox>
		    <text>
			<label>NWS Engaged</label>
			<halign>left</halign>
			<row>2</row>
			<col>0</col>
		    </text>
		    <checkbox>
			<row>2</row>
			<col>1</col>
			<property>fdm/jsbsim/gear/NWS/engaged</property>
			<command>dialog-apply</command>
			<live>true</live>
			<binding>
			    <command>property-toggle</command>
			    <property>fdm/jsbsim/gear/NWS/engaged</property>
			</binding>
		    </checkbox>
		    <text>
			<label>Rotor-Blades Fold</label>
			<halign>left</halign>
			<row>3</row>
		    <col>0</col>
		    </text>
		    <checkbox>
			<row>3</row>
			<col>1</col> 
			<property>fdm/jsbsim/fcs/wing-fold-cmd-norm</property>
			<command>dialog-apply</command>
			<live>true</live>
			<enable>
			    <property>fdm/jsbsim/animation/rotor_brake-switch-cmd</property>
			</enable>
			<binding>
			    <command>property-toggle</command>
			    <property>fdm/jsbsim/fcs/wing-fold-cmd-norm</property>
			</binding>
		    </checkbox>
		    <text>
			<label>Landing-Light</label>
			<halign>left</halign>
			<row>4</row>
		    <col>0</col>
		    </text>
		    <checkbox>
			<row>4</row>
			<col>1</col> 
			<property>fdm/jsbsim/electrical/lighting/landing-lights</property>
			<command>dialog-apply</command>
			<live>true</live>
			<binding>
			    <command>property-toggle</command>
			    <property>fdm/jsbsim/electrical/lighting/landing-lights</property>
			</binding>
		    </checkbox>
		    <text>
			<label>Open Left Cabin Door</label>
			<halign>left</halign>
			<row>6</row>
		    <col>0</col>
		    </text>
		    <checkbox>
			<row>6</row>
			<col>1</col>
			<property>fdm/jsbsim/animation/left-cabin_door-pos-cmd</property>
			<command>dialog-apply</command>
			<live>true</live>
			<binding>
			    <command>property-toggle</command>
			    <property>fdm/jsbsim/animation/left-cabin_door-pos-cmd</property>
			</binding>
		    </checkbox>
		    <text>
			<label>Open Right Cabin Door</label>
			<halign>left</halign>
			<row>7</row>
		    <col>0</col>
		    </text>
		    <checkbox>
			<row>7</row>
			<col>1</col>
			<property>fdm/jsbsim/animation/right-cabin_door-pos-cmd</property>
			<command>dialog-apply</command>
			<live>true</live>
			<binding>
			    <command>property-toggle</command>
			    <property>fdm/jsbsim/animation/right-cabin_door-pos-cmd</property>
			</binding>
		    </checkbox>
		     <text>
			<label>Cockpit third-seat</label>
			<halign>left</halign>
			<row>8</row>
		    <col>0</col>
		    </text>
		     <checkbox>
			<row>8</row>
			<col>1</col>
			<property>sim/model/third-seat-selected</property>
			<command>dialog-apply</command>
			<live>true</live>
			<binding>
			    <command>property-toggle</command>
			    <property>sim/model/third-seat-selected</property>
			</binding>
		    </checkbox>
		</group>
	    <hrule/>
	     <hrule/>
	     
            <button>
                <legend>Close</legend>
                <default>true</default>
                <key>Esc</key>
                <padding>10</padding>
                <command>dialog-apply</command>
                <binding>
		    <command>dialog-close</command>
                </binding>
            </button>

</PropertyList>
