 <path>poussiere.osgx</path>


 <offsets>
    <x-m> 0</x-m>
    <y-m> 00 </y-m>
    <z-m> -1.5</z-m>
    <pitch-deg>105.46</pitch-deg>
    <roll-deg>0</roll-deg>
 </offsets>

 <effect>
     <inherits-from>Effects/model-transparent</inherits-from>
     <object-name>rotor-dust</object-name>
</effect>


 <animation>
     <type>scale</type>
     <object-name>rotor-dust</object-name>
     <property>position/gear-agl-m</property>
     <x-offset>0.0</x-offset>
     <y-offset>0.0</y-offset>
     <z-offset>0.0</z-offset>
     <x-min>1</x-min>
     <x-max>3</x-max>
     <y-min>1</y-min>
     <y-max>3</y-max>
     <z-min>1</z-min>
      <z-max>4</z-max>
     <x-factor>0.2</x-factor>
     <y-factor>0.2</y-factor>
     <z-factor>0.15</z-factor>
</animation>


<animation>
    <type>select</type>
    <object-name>rotor-dust</object-name>
    <condition>
            <less-than>
                <property>sim/time/sun-angle-rad</property>
                <value>1.7</value>
            </less-than>
    </condition>
</animation>

